@model IEnumerable<SP26_SMAssignment3.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Movies</h1>
    <a asp-action="Create" class="btn btn-primary">+ Add Movie</a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Poster</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>IMDB</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.PosterImage))
                    {
                        <img src="@item.PosterImage" alt="@item.Title" style="height:60px;" class="rounded" />
                    }
                </td>
                <td>@item.Title</td>
                <td>@item.Genre</td>
                <td>@item.YearOfRelease</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.IMDBLink))
                    {
                        <a href="@item.IMDBLink" target="_blank">IMDB</a>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
