@model SP26_SMAssignment3.Models.MovieDetailsViewModel

@{
    ViewData["Title"] = Model.Movie.Title ?? "Movie Details";
    var overallDisplay = Math.Round(Model.OverallScore, 2);
    var badgeClass = Model.OverallSentimentLabel == "POSITIVE" ? "bg-success" : "bg-danger";
}

<div class="row mb-4">
    <div class="col-md-3 text-center">
        @if (!string.IsNullOrEmpty(Model.Movie.PosterImage))
        {
            <img src="@Model.Movie.PosterImage" alt="@Model.Movie.Title" class="img-fluid rounded shadow" style="max-height:350px;" />
        }
    </div>
    <div class="col-md-9">
        <h1 class="fw-bold">@Model.Movie.Title</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Movie.Genre</dd>

            <dt class="col-sm-3">Year</dt>
            <dd class="col-sm-9">@Model.Movie.YearOfRelease</dd>

            <dt class="col-sm-3">IMDB</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Movie.IMDBLink))
                {
                    <a href="@Model.Movie.IMDBLink" target="_blank">View on IMDB</a>
                }
            </dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Movie.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
    </div>
</div>

@if (Model.Cast.Count > 0)
{
    <hr />
    <h3>Cast</h3>
    <table id="castTable" class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Name</th>
                <th>Age</th>
                <th>IMDB</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var actor in Model.Cast)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(actor.Photo))
                        {
                            <img src="@actor.Photo" style="height:50px;width:50px;object-fit:cover;" class="rounded-circle" />
                        }
                    </td>
                    <td><a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">@actor.Name</a></td>
                    <td>@actor.Age</td>
                    <td>
                        @if (!string.IsNullOrEmpty(actor.IMDBLink))
                        {
                            <a href="@actor.IMDBLink" target="_blank">IMDB</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h3>Reddit Sentiment Analysis</h3>
<p class="lead">
    Overall sentiment:
    <span class="badge @badgeClass fs-6">@Model.OverallSentimentLabel: @overallDisplay</span>
</p>

@if (Model.RedditPosts.Count == 0)
{
    <div class="alert alert-warning">No Reddit comments found or sentiment API unavailable.</div>
}
else
{
    <table id="sentimentTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Reddit Comment</th>
                <th style="width:180px;">Sentiment Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RedditPosts)
            {
                var rowBadge = item.Label == "POSITIVE" ? "bg-success" : "bg-danger";
                <tr>
                    <td>@item.Comment</td>
                    <td><span class="badge @rowBadge">@item.Label: @item.Score%</span></td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#sentimentTable').DataTable();
            $('#castTable').DataTable();
        });
    </script>
}
