@model IEnumerable<SP26_SMAssignment3.Models.MovieActor>

@{
    ViewData["Title"] = "Cast";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Cast</h1>
    <a asp-action="Create" class="btn btn-primary">+ Add Cast Link</a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Actor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Movie?.Title</td>
                <td>@item.Actor?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
