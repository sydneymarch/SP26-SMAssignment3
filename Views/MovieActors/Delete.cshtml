@model SP26_SMAssignment3.Models.MovieActor

@{
    ViewData["Title"] = "Remove Cast Link";
}

<h1>Remove Cast Link</h1>
<h3>Are you sure you want to remove this actor from this movie?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">Movie</dt>
    <dd class="col-sm-10">@Model?.Movie?.Title</dd>

    <dt class="col-sm-2">Actor</dt>
    <dd class="col-sm-10">@Model?.Actor?.Name</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Yes, Remove" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
