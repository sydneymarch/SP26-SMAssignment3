@model SP26_SMAssignment3.Models.MovieActor

@{
    ViewData["Title"] = "Cast Details";
}

<h1>Cast Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Movie</dt>
    <dd class="col-sm-10">@Model?.Movie?.Title</dd>

    <dt class="col-sm-2">Actor</dt>
    <dd class="col-sm-10">@Model?.Actor?.Name</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
<a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
