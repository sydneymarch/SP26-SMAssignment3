@model IEnumerable<SP26_SMAssignment3.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Actors</h1>
    <a asp-action="Create" class="btn btn-primary">+ Add Actor</a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Age</th>
            <th>IMDB</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.Photo))
                    {
                        <img src="@item.Photo" alt="@item.Name" style="height:60px;width:60px;object-fit:cover;" class="rounded-circle" />
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Gender</td>
                <td>@item.Age</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.IMDBLink))
                    {
                        <a href="@item.IMDBLink" target="_blank">IMDB</a>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
