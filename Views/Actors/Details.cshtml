@model SP26_SMAssignment3.Models.ActorDetailsViewModel

@{
    ViewData["Title"] = Model.Actor.Name ?? "Actor Details";
    var overallDisplay = Math.Round(Model.OverallScore, 2);
    var badgeClass = Model.OverallSentimentLabel == "POSITIVE" ? "bg-success" : "bg-danger";
}

<div class="row mb-4">
    <div class="col-md-3 text-center">
        @if (!string.IsNullOrEmpty(Model.Actor.Photo))
        {
            <img src="@Model.Actor.Photo" alt="@Model.Actor.Name" class="img-fluid rounded-circle shadow" style="max-height:280px;" />
        }
    </div>
    <div class="col-md-9">
        <h1 class="fw-bold">@Model.Actor.Name</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">@Model.Actor.Gender</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@Model.Actor.Age</dd>

            <dt class="col-sm-3">IMDB</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Actor.IMDBLink))
                {
                    <a href="@Model.Actor.IMDBLink" target="_blank">View on IMDB</a>
                }
            </dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Actor.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
    </div>
</div>

@if (Model.Filmography.Count > 0)
{
    <hr />
    <h3>Filmography</h3>
    <table id="filmographyTable" class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Poster</th>
                <th>Title</th>
                <th>Genre</th>
                <th>Year</th>
                <th>IMDB</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Filmography)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(movie.PosterImage))
                        {
                            <img src="@movie.PosterImage" style="height:50px;" class="rounded" />
                        }
                    </td>
                    <td><a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a></td>
                    <td>@movie.Genre</td>
                    <td>@movie.YearOfRelease</td>
                    <td>
                        @if (!string.IsNullOrEmpty(movie.IMDBLink))
                        {
                            <a href="@movie.IMDBLink" target="_blank">IMDB</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h3>Reddit Sentiment Analysis</h3>
<p class="lead">
    Overall sentiment:
    <span class="badge @badgeClass fs-6">@Model.OverallSentimentLabel: @overallDisplay</span>
</p>

@if (Model.RedditPosts.Count == 0)
{
    <div class="alert alert-warning">No Reddit comments found.</div>
}
else
{
    <table id="sentimentTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Reddit Comment</th>
                <th style="width:180px;">Sentiment Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RedditPosts)
            {
                var rowBadge = item.Label == "POSITIVE" ? "bg-success" : "bg-danger";
                <tr>
                    <td>@item.Comment</td>
                    <td><span class="badge @rowBadge">@item.Label: @item.Score%</span></td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#sentimentTable').DataTable();
            $('#filmographyTable').DataTable();
        });
    </script>
}
